<!DOCTYPE html>
<html class="theme-light" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta property="og:site_name" content="GoAnimate">
		<title><%= uinfo.username %> on GoAnimate</title>
		<meta name="description" content="Make a video online for free with GoAnimate! Make videos for YouTube, create educational videos, make animated e-cards and more!">

		<link href="/static/go/css/site.css" rel="stylesheet" type="text/css">
		<link href="/static/go/css/style.css" rel="stylesheet" type="text/css">
		<link href="/static/go/css/site_responsive.css" rel="stylesheet" type="text/css">
		<link href="/static/go/css/user.css" rel="stylesheet" type="text/css">

		<script src="/static/go/js/go2.js"></script>
		<!-- JS LIBRARIES -->
		<script src="/static/go/js/libs/jquery/jquery-3.6.0.min.js"></script>
		<script src="/static/go/js/libs/Gettext.js"></script>
		<script src="/static/go/po/goserver_js-en_US.js"></script>
		<script> // set up gettext
			var I18N_LANG = "en_US";
			var GT = new Gettext({
				"locale_data": json_locale_data
			});
		</script>
	</head>
	<body>
		<%- include("../includes/header", { user: user }); %>

		<div class="profile-banner">
			<img src="/files/user/<%= uinfo.id %>/banner" alt="banner"/>
		</div>

		<div class="profile-main">
			<div class="container">
				<img class="portrait" src="/files/user/<%= uinfo.id %>/picture" alt="">
		
				<div class="profile-main-content">
					<div class="profile-name">
						<h1><%= uinfo.username %></h1>
						<% if (uinfo.id != user?.id) { %>
							<!-- you can't follow yourself -->
							<a class="btn btn-large btn-orange" href="#" onclick="followUser">Follow</a>
						<% } %>
					</div>
		
					<div class="bio"><%= uinfo.bio %></div>
				</div>
			</div>
		</div>

		<section class="profile-stats">
			<div class="container flex-container">
				<ul class="profile-main-nav">
					<li><a class="btn btn-large btn-blue" href="/user/<%= uinfo.id %>/followers"><span class="num"><%= uinfo.followers.length %></span> Followers</a></li>
					<li><a class="btn btn-large btn-blue" href="/user/<%= uinfo.id %>/following"><span class="icon following"></span> <span class="num"><%= uinfo.following.length %></span> Following</a></li>
					<li><a class="btn btn-large btn-blue" href="/user/<%= uinfo.id %>/videos"><span class="icon video"></span> <span class="num">44</span> Videos</a></li>
				</ul>
			</div>
		</section>

		<main>
			<div class="container flex-container centered">
				<h2>Recent Videos</h2>
			</div>
		</main>

		<%- include("../includes/footer", {}); %>

		<script>
			(function () {
			})();
		</script>
		<script>
			function locStorage(action, key, value) {
				var result;
				if (typeof (localStorage) == 'undefined') {
					// localStorage not supported
				} else {
					try {
						switch (action) {
							case 'setItem':
								localStorage.setItem(key, value);
								break;
							case 'getItem':
								result = localStorage.getItem(key);
								break;
							case 'removeItem':
								localStorage.removeItem(key);
								break;
						}
						return result;
					} catch (e) {
						if (e == QUOTA_EXCEEDED_ERR) {
							//data wasn't successfully saved due to quota exceed so throw an error
						}
					}
				}
			}
		</script>
	</body>
	<script src="/static/go/js/site.js"></script>
</html>
